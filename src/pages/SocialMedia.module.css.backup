.container {
  padding: 2rem;
  max-width: 1400px;
  margin: 0 auto;
}

.headerSection {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
}

.headerSection h1 {
  margin: 0 0 0.5rem 0;
  color: var(--text-primary, #fff);
  font-size: 2rem;
}

.subtitle {
  color: var(--text-secondary, #a0a0a0);
  margin: 0;
}

.tabs {
  display: flex;
  gap: 1rem;
  margin-bottom: 2rem;
  border-bottom: 2px solid var(--border-color, #2a2a2a);
}

.tab {
  padding: 0.75rem 1.5rem;
  background: none;
  border: none;
  color: var(--text-secondary, #a0a0a0);
  cursor: pointer;
  font-size: 1rem;
  transition: all 0.3s ease;
  border-bottom: 2px solid transparent;
  margin-bottom: -2px;
}

.tab:hover {
  color: var(--text-primary, #fff);
}

.activeTab {
  color: var(--accent-color, #7c3aed) !important;
  border-bottom-color: var(--accent-color, #7c3aed) !important;
}

.content {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.createPost {
  background: var(--card-bg, #1a1a1a);
  border: 1px solid var(--border-color, #2a2a2a);
  border-radius: 12px;
  padding: 2rem;
}

.createPost h2 {
  margin: 0 0 1rem 0;
  color: var(--text-primary, #fff);
  font-size: 1.5rem;
}

.postInput {
  width: 100%;
  background: var(--input-bg, #0f0f0f);
  border: 1px solid var(--border-color, #2a2a2a);
  border-radius: 8px;
  padding: 1rem;
  color: var(--text-primary, #fff);
  font-size: 1rem;
  font-family: inherit;
  resize: vertical;
  margin-bottom: 1rem;
}

.postInput:focus {
  outline: none;
  border-color: var(--accent-color, #7c3aed);
}

.platformSelector {
  margin-bottom: 1.5rem;
}

.sectionLabel {
  color: var(--text-secondary, #a0a0a0);
  margin: 0 0 0.75rem 0;
  font-size: 0.9rem;
  font-weight: 500;
}

.platformButtons {
  display: flex;
  flex-wrap: wrap;
  gap: 0.75rem;
}

.platformBtn {
  padding: 0.5rem 1rem;
  background: var(--card-bg, #1a1a1a);
  border: 1px solid var(--border-color, #2a2a2a);
  border-radius: 8px;
  color: var(--text-secondary, #a0a0a0);
  cursor: pointer;
  transition: all 0.3s ease;
  text-transform: capitalize;
}

.platformBtn:hover {
  border-color: var(--accent-color, #7c3aed);
  color: var(--text-primary, #fff);
}

.platformBtnActive {
  background: var(--accent-color, #7c3aed);
  border-color: var(--accent-color, #7c3aed);
  color: #fff !important;
}

.postActions {
  display: flex;
  gap: 1rem;
  justify-content: flex-end;
}

.uploadMediaBtn,
.scheduleBtn {
  padding: 0.75rem 1.5rem;
  background: var(--card-bg, #1a1a1a);
  border: 1px solid var(--border-color, #2a2a2a);
  border-radius: 8px;
  color: var(--text-primary, #fff);
  cursor: pointer;
  transition: all 0.3s ease;
}

.uploadMediaBtn:hover,
.scheduleBtn:hover {
  border-color: var(--accent-color, #7c3aed);
}

.createBtn {
  padding: 0.75rem 1.5rem;
  background: var(--accent-color, #7c3aed);
  border: none;
  border-radius: 8px;
  color: #fff;
  cursor: pointer;
  transition: all 0.3s ease;
  font-weight: 500;
}

.createBtn:hover {
  background: var(--accent-hover, #6d28d9);
}

.postsGrid {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.postsGrid h2 {
  margin: 0 0 1rem 0;
  color: var(--text-primary, #fff);
}

.postCard {
  background: var(--card-bg, #1a1a1a);
  border: 1px solid var(--border-color, #2a2a2a);
  border-radius: 12px;
  padding: 1.5rem;
  transition: all 0.3s ease;
}

.postCard:hover {
  border-color: var(--accent-color, #7c3aed);
}

.postHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

.statusBadge {
  padding: 0.25rem 0.75rem;
  border-radius: 20px;
  font-size: 0.85rem;
  font-weight: 500;
  text-transform: uppercase;
}

.statusPublished {
  background: rgba(34, 197, 94, 0.1);
  color: #22c55e;
}

.statusScheduled {
  background: rgba(251, 146, 60, 0.1);
  color: #fb923c;
}

.statusDraft {
  background: rgba(156, 163, 175, 0.1);
  color: #9ca3af;
}

.scheduledDate {
  color: var(--text-secondary, #a0a0a0);
  font-size: 0.9rem;
}

.postContent {
  color: var(--text-primary, #fff);
  margin: 0 0 1rem 0;
  line-height: 1.6;
}

.postPlatforms {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  margin-bottom: 1rem;
}

.platformTag {
  padding: 0.25rem 0.75rem;
  background: var(--input-bg, #0f0f0f);
  border: 1px solid var(--border-color, #2a2a2a);
  border-radius: 20px;
  color: var(--text-secondary, #a0a0a0);
  font-size: 0.85rem;
  text-transform: capitalize;
}

.engagement {
  display: flex;
  gap: 1.5rem;
  padding: 1rem 0;
  border-top: 1px solid var(--border-color, #2a2a2a);
  margin-bottom: 1rem;
}

.engagement span {
  color: var(--text-secondary, #a0a0a0);
  font-size: 0.9rem;
}

.editBtn,
.deleteBtn,
.viewBtn {
  padding: 0.5rem 1rem;
  background: var(--card-bg, #1a1a1a);
  border: 1px solid var(--border-color, #2a2a2a);
  border-radius: 6px;
  color: var(--text-primary, #fff);
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 0.9rem;
}

.editBtn:hover,
.viewBtn:hover {
  border-color: var(--accent-color, #7c3aed);
}

.deleteBtn:hover {
  border-color: #ef4444;
  color: #ef4444;
}

.calendar {
  background: var(--card-bg, #1a1a1a);
  border: 1px solid var(--border-color, #2a2a2a);
  border-radius: 12px;
  padding: 2rem;
}

.calendar h2 {
  margin: 0 0 1.5rem 0;
  color: var(--text-primary, #fff);
}

.comingSoon {
  text-align: center;
  color: var(--text-secondary, #a0a0a0);
  padding: 3rem 0;
  font-size: 1.2rem;
}

.scheduledPosts {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  margin-top: 1.5rem;
}

.scheduledItem {
  padding: 1rem;
  background: var(--input-bg, #0f0f0f);
  border: 1px solid var(--border-color, #2a2a2a);
  border-radius: 8px;
}

.scheduledTime {
  color: var(--accent-color, #7c3aed);
  font-weight: 500;
  margin-bottom: 0.5rem;
}

.scheduledContent {
  color: var(--text-primary, #fff);
}

.analytics {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.analytics h2 {
  margin: 0 0 1.5rem 0;
  color: var(--text-primary, #fff);
}

.statsGrid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.statCard {
  background: var(--card-bg, #1a1a1a);
  border: 1px solid var(--border-color, #2a2a2a);
  border-radius: 12px;
  padding: 1.5rem;
}

.statCard h3 {
  margin: 0 0 0.75rem 0;
  color: var(--text-secondary, #a0a0a0);
  font-size: 0.9rem;
  font-weight: 500;
  text-transform: uppercase;
}

.statValue {
  margin: 0 0 0.5rem 0;
  color: var(--text-primary, #fff);
  font-size: 2rem;
  font-weight: 600;
}

.statChange {
  color: #22c55e;
  font-size: 0.9rem;
}

.platformPerformance {
  background: var(--card-bg, #1a1a1a);
  border: 1px solid var(--border-color, #2a2a2a);
  border-radius: 12px;
  padding: 2rem;
}

.platformPerformance h3 {
  margin: 0 0 1.5rem 0;
  color: var(--text-primary, #fff);
}

.platformStat {
  margin-bottom: 1.5rem;
}

.platformInfo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.5rem;
}

.platformName {
  color: var(--text-primary, #fff);
  font-weight: 500;
  text-transform: capitalize;
}

.followerCount {
  color: var(--text-secondary, #a0a0a0);
  font-size: 0.9rem;
}

.progressBar {
  width: 100%;
  height: 8px;
  background: var(--input-bg, #0f0f0f);
  border-radius: 4px;
  overflow: hidden;
}

.progressFill {
  height: 100%;
  background: linear-gradient(90deg, var(--accent-color, #7c3aed), #a78bfa);
  border-radius: 4px;
  transition: width 0.3s ease;
}

.accounts {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.accounts h2 {
  margin: 0;
  color: var(--text-primary, #fff);
}

.accountsGrid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 1.5rem;
}

.accountCard {
  background: var(--card-bg, #1a1a1a);
  border: 1px solid var(--border-color, #2a2a2a);
  border-radius: 12px;
  padding: 1.5rem;
  transition: all 0.3s ease;
}

.accountCard:hover {
  border-color: var(--accent-color, #7c3aed);
}

.accountHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

.accountPlatform {
  color: var(--text-primary, #fff);
  font-weight: 500;
  font-size: 1.1rem;
  text-transform: capitalize;
}

.connectionStatus {
  padding: 0.25rem 0.75rem;
  border-radius: 20px;
  font-size: 0.85rem;
  font-weight: 500;
}

.connected {
  background: rgba(34, 197, 94, 0.1);
  color: #22c55e;
}

.disconnected {
  background: rgba(239, 68, 68, 0.1);
  color: #ef4444;
}

.accountUsername {
  color: var(--text-secondary, #a0a0a0);
  margin: 0 0 0.5rem 0;
}

.accountFollowers {
  color: var(--text-primary, #fff);
  margin: 0 0 1rem 0;
  font-size: 1.1rem;
  font-weight: 500;
}

.connectBtn,
.disconnectBtn {
  width: 100%;
  padding: 0.75rem;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  font-weight: 500;
  transition: all 0.3s ease;
}

.connectBtn {
  background: var(--accent-color, #7c3aed);
  color: #fff;
}

.connectBtn:hover {
  background: var(--accent-hover, #6d28d9);
}

.disconnectBtn {
  background: rgba(239, 68, 68, 0.1);
  color: #ef4444;
  border: 1px solid #ef4444;
}

.disconnectBtn:hover {
  background: rgba(239, 68, 68, 0.2);
}

@media (max-width: 768px) {
  .container {
    padding: 1rem;
  }

  .headerSection h1 {
    font-size: 1.5rem;
  }

  .tabs {
    overflow-x: auto;
    scrollbar-width: none;
  }

  .tabs::-webkit-scrollbar {
    display: none;
  }

  .tab {
    white-space: nowrap;
  }

  .postActions {
    flex-direction: column;
  }

  .statsGrid {
    grid-template-columns: 1fr;
  }

  .accountsGrid {
    grid-template-columns: 1fr;
  }
}
